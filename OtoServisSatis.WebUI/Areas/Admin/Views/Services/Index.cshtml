@model IEnumerable<OtoServisSatis.Entities.Service>

@{
    ViewData["Title"] = "Servis";
}

<h1>Servis</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Servis Kaydı Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceEntryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceExitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleIssue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerformedOperations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsUnderWarranty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicensePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChassisNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceEntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceExitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleIssue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerformedOperations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsUnderWarranty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicensePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChassisNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
