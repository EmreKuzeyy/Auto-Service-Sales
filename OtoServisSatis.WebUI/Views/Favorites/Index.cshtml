@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "Favorilerim";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Favorilerim</h2>

    @if (Model is not null && Model.Count() > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped align-middle text-center shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 40%">Araç</th>
                        <th style="width: 20%">Resim</th>
                        <th style="width: 10%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a class="text-decoration-none text-dark fw-bold" href="/Vehicles/Index/@item.Id">
                                    @item.Make.Name @item.Model @item.Colour @item.BodyType
                                </a>
                            </td>
                            <td>
                                <a href="/Img/Vehicles/@item.Photo1" target="_blank">
                                    <img src="/Img/Vehicles/@item.Photo1" alt="@item.Model" class="img-thumbnail shadow-sm" style="height: 60px;" />
                                </a>
                            </td>
                            <td>
                                <form action="/Favorites/Remove" method="post">
                                    <input type="hidden" name="VehicleId" value="@item.Id" />
                                    <button class="btn btn-sm btn-danger" type="submit">Favorilerden Kaldır</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center shadow-sm">
            <h4 class="mb-0">Favorilerinizde araç bulunmamaktadır.</h4>
        </div>
    }
</div>
